{
  "includeCoAuthoredBy": false,
  "permissions": {
    "read": {
      "deny": [
        "**/.env*",
        "**/*.pem",
        "**/*.key",
        "**/secrets/**",
        "**/credentials/**",
        "**/.aws/**",
        "**/.ssh/**",
        "**/docker-compose*.yml",
        "**/config/database.yml"
      ]
    }
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|MultiEdit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "jq -r '.tool_input.file_path' | { read file_path; if echo \"$file_path\" | grep -q '\\.md$'; then npx prettier --write \"$file_path\"; fi; }"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "statusline-bedrock"
  },
  "feedbackSurveyState": {
    "lastShownTime": 1754000015888
  }
}
